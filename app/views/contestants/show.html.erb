
<div class="contestant-show">
    <%= image_tag "topbanner.png",:style=>"height:30%; width:17%; position:absolute;bottom:72%;left:85%" %>
  <%=image_tag @contestant.image_url.to_s, :style => "width:100%;height:100%"%>
  <% if current_user && current_user.can_vote_for?(@contestant) %>
      <%= link_to "Vote", vote_contestant_path(@contestant, value: 1), method: "post", :class=>"btn btn-success" %>
  <% end %>
  <button type="button" class="btn btn-default"> <%= pluralize @contestant.votes, "vote" %></button>|
</div>




<p>
  <strong>User:</strong>
  <%= @contestant.user_id %>
</p>


<p>
  <strong>Name:</strong>
  <%= @contestant.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @contestant.title %>
</p>

<%= link_to 'Edit', edit_contestant_path(@contestant) %> |
<%= link_to 'Back', contestants_path %>
