


<%= bootstrap_form_for @article,  validate: true, :html => { :class => "form-horizontal user" } do |f|  %>


    <div data-role="content" data-theme="c">
      <ul data-role="listview" data-inset="true">
        <li data-role="list-divider" style="text-align: center" style="text-align: center">
          Edit post
        </li>
        <% if @article.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

              <div class="panel-body" style="text-align: center">
                <ul>
                  <% @article.errors.full_messages.each do |msg| %>
                      <li style="color: #0d0d0d;text-align: center"><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
        <% end %>
        <li>
          <div data-role="fieldcontain" style="position: relative;left: 1%" >

            <%= f.text_area :body, hide_label: true,:style=>"width:98%", placeholder: "Enter your Old Password", class: "input-lg required" %>
          </div>
        </li>


          <div class="controls" style="width: 70%;position:relative;left:60px">
         <%= f.collection_select :category_id, Category.all, :id, :name,hide_label: true,:style=>"width: 70%;position:relative;left:10px"  %>
          </div>




        <%= f.hidden_field :user_id, :class => 'form-control', :value=> current_user.id if current_user%>


        <li>
          <%= f.submit "Submit"%>
        </li>
      </ul>
    </div>
<% end %>

