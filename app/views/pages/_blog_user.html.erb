<%= form_for @page, :html => { :class => "form-horizontal page" } do |f| %>

    <% if @page.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @page.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="control-group">
      <div class="controls">
        <%= f.text_field :name, :class => 'form-control', :placeholder=>"Enter Name" %>
      </div>
      <%= error_span(@page[:name]) %>
    </div>
    <div class="control-group"><br>

      <div class="controls">
        <%= f.text_field :page_no, :class => 'form-control', :placeholder=>"Enter Number" %>
      </div>
      <%= error_span(@page[:page_no]) %>
    </div><br>
    <div class="control-group">


      <div class="controls">
        <%= f.hidden_field :user_id, :class => 'form-control', :value=> current_user.id if current_user %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :image, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :image, :class => 'form-control' %>
      </div>
      <%= error_span(@page[:image]) %>
    </div>
    <br>

    <div class="modal-footer">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>


<% end %>
