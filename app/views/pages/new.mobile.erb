<%= form_for(@page) do |f| %>

    <% if @page.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @page.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div data-role="content" data-theme="c">
      <ul data-role="listview" data-inset="true">
        <li data-role="list-divider" style="text-align: center" style="text-align: center">
          Grew New tree
        </li>
        <%= f.hidden_field :user_id, :autofocus => false, :placeholder => "Name", :value => current_user.id if current_user %>
        <li>  <%= f.text_field :name, :autofocus => false, :placeholder => "Name" %></li>
        <li>  <%= f.text_field :page_no, :autofocus => false, :placeholder => "Page Number" %></li>

        <li>
          <%= f.submit "Submit"%>
        </li>
      </ul>
    </div>


<% end %>
