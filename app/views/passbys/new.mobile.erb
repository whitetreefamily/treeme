<%= form_tag  passbys_path do %>
<div data-role="content" data-theme="c">
  <ul data-role="listview" data-inset="true">
    <li data-role="list-divider" style="text-align: center" style="text-align: center">
      Sign in to Slatree
    </li>



    <li>
      <div data-role="fieldcontain">
        <%= email_field_tag :email, params[:email], :autofocus => false, :placeholder => "Email", :style=>"width:95%;" %>
      </div>
    </li>

    <li>
      <div data-role="fieldcontain">
        <%= password_field_tag :password, params[:password], :autofocus => false, :placeholder => "Password", :style=>"width:95%;" %>
      </div>
    </li>



    <li>
      <input type="submit" value="Submit" data-icon="star" data-iconpos="top" />
    </li>

    <li data-role="list-divider" style="text-align: center"><a href="/passbys/show" data-transition="slide"  ><b>Create A New Account</b></a></li>
    <li data-role="list-divider" style="text-align: center"><a href="/password_resets/new" data-transition="slide"  ><b>Forget Password</b></a></li>
  </ul>
<% end %>


</div>
