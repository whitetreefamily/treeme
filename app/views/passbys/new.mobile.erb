<style type="text/css">
  .staree-logo{
      width: 105%;
      background: forestgreen;
      padding: 0.7px;
      padding-top: 4px;
      text-align: center;
      box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
      font-family: 'Open Sans Light', sans-serif;
      margin-bottom: 2%;
      margin-top: 2%;
      position: relative;
      right: 2%;
      color: #fff;
      font-size:170%;
  }
    .sign-up{
        width: 105%;
        background: #fff;
        padding: 0.7px;
        padding-top: 10%;
        text-align: center;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        margin-bottom: 2%;
        margin-top: 20%;
        position: relative;
        right: 2%;
        padding-left: 15%;
    }
    .sign-up-sub{
        width: 105%;
        background: #fff;
        padding: 10.7px;
        text-align: center;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        position: relative;
        right: 2%;
        padding-top: 2%;
        margin-bottom: 15%
    }
    .sign-up-fulter{
        padding-left: 15%;
        margin-bottom: 20%
    }
</style>
<div class="staree-logo">
      <b>Welcome Statree</b><br>
</div>
<div class="sign-up">

   <%= form_tag  passbys_path do %>
          <%= text_field_tag :email, params[:email], :class => 'form-control',:style=>"width:80%",:placeholder => "Email"%>
       <br>
         <%= password_field_tag :password, params[:password],:style=>"width:80%", :class => 'form-control',:placeholder => "Password"%>

  <div style="height: 20px"></div>
</div>
  <div class="sign-up-sub">
    <input type="submit" value="Login"  style="width:100%; " class="btn btn-success" data-iconpos="top" />
  </div>
<% end %>

  <div class="sign-up-fulter">
    <a href="/password_resets/new" ><b>Forget Password</b></a>
        <a href="/passbys/show" data-transition="slide" class="btn btn-primary" style="width:50%;margin-left:5%"><b>Create new Account</b></a>
  </div>