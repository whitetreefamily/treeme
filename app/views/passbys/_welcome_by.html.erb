
<div style="text-align: center;padding-top: 5%;width: 100%">
  <%= form_tag  passbys_path  do  %>
      <div style="text-align: center;padding-bottom: 1%;width: 100%">
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email], :class => 'form-control' %>
        <%= label_tag :password %><br />
        <%= password_field_tag :password, params[:password], :class => 'form-control',:style =>"margin-bottom: 2%"%>
        <%=submit_tag  "Log in",:class => 'btn btn-success', :style =>"width:70%"%>
      </div>
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me %>    <%= link_to "forgotten password?", password_resets_new_path %>
  <% end %>
</div>
