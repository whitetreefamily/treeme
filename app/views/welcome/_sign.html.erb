<div style="text-align: center;position: relative;left: 10%">
  <%= form_tag  passbys_path  do  %>
      <div style="text-align: center;padding-bottom: 4%;width: 100%">

        <table style="position: relative;left: 16%;">
          <tr>
            <td><h4 style="margin-right: 10px;color: forestgreen"><b>Sign in</b></h4></td>
            <td><%= text_field_tag :email, params[:email],:placeholder=>"Email", :class => 'form-control' %></td>
            <td><%= password_field_tag :password, params[:password],:style => "margin-left: 5px;", :placeholder=>"Password", :class => 'form-control'%></td>
            <td><%=submit_tag  "Log in",:class => 'btn btn-success',:style => "margin-left: 15px;"%></td>
            <td><%= link_to "forget", new_password_reset_path%></td>
          </tr>
        </table>
      </div>
  <% end %>
</div>
