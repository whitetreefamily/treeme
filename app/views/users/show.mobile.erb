<style type="text/css">

    .normal-branch{
        width: 105%;
        background: #fff;
        padding: 0.7px;
        padding-top: 4px;
        text-align: center;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        margin-bottom: 2%;
        position: relative;
        right: 2%;
    }
    .normal-user-mobile{
        width: 105%;
        height: 80px;
        padding: 0.7px;
        padding-top: 4px;
        text-align: center;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        position: relative;
        right: 2%;
    }
    .normal-index{
        width:20%;
        height: 20px;
        float: right;
        text-align:center;
        font-size: inherit;
    }
    .normal-index1{
        width:200px;
        height: 50px;
        text-align: left;
        padding-left: 2%;
    }
    .user-t tr td
    {
        border:1px solid forestgreen;
    }
    .normal-g{
        width: 105%;
        height: auto;
        padding: 0.7px;
        padding-top: 4px;
        text-align: center;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        margin-bottom: 2%;
        position: relative;
        right: 2%;
    }
    .normal-index{
        width:20%;
        height: 20px;
        float: right;
        text-align:center;
        font-size: inherit;
    }
    .normal-index1{
        width:200px;
        height: 50px;
        text-align: left;
        padding-left: 2%;
    }
    .normal-index-sub{
        width: 100%;
        height: auto;
        text-align: center;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        margin-bottom: 2%;
        border: solid  #2a88bd 1px ;
        padding: 2%;

    }
    .comment-body{
        width: 100%;
        height: auto;
        padding: 0.7px;
        padding-top: 4px;
        text-align: left;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        margin-bottom: 2%;

    }
    .font-body{
        font-family: 'Open Sans Light', sans-serif;
        color: #2a88bd;
        padding: 2%;
        font-size: 85%;

    }
    .normal-index{
        width:20%;
        height: 20px;
        float: right;
        text-align:center;
        font-size: inherit;
        margin-top: 1%;
        position: relative;
        right: 3%;
    }
    .normal-index1{
        width:130px;
        height: 50px;
        text-align: left;
        padding-left: 2%;
    }
    .page-index-mobile{
        width: 105%;
        background: #fff;
        padding: 3px;
        text-align: center;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        margin-bottom: 2%;
        position: relative;
        right: 2%;
    }
</style>

<div class="normal-user-mobile">
  <% if current_user.id == @user.id %>
  <div class="normal-index">
    <a  data-icon="arrow-l" <%= link_to '<i class="glyphicon glyphicon-cog" style="font-size:1.2em;color:forestgreen"></i>&nbsp'.html_safe, edit_user_path(@user) %></a>
  </div>
 <% end %>
  <div class="normal-index1">
    <div>
      <% if @user.image.present? %>
          <%= image_tag(@user.image,:class=>"mobile-user-profile")  %>
       <% else  %>
          <%= image_tag("tree.png",:class=>"mobile-user-profile")  %>
        <% end %>
    </div>
    <p style="position: relative;bottom: 140px;left: 94px;font-size: 80%"><b><%= @user.name %></b>
      <br>
      <%= @user.email %>
    </p>
  </div>
</div>
 <div class="normal-branch">
   <table class="user-t" style="position: relative;width: 100%;">
     <tr>
       <td><b class="glyphicon glyphicon-tree-deciduous" style="font-size: 100%;color: forestgreen"></b>  <%= @user.blog.count %></td>
       <td >  <b class="glyphicon glyphicon-leaf" style="font-size: 100%;color: forestgreen"></b> <%= @user.branches.count %> </td>
       <td ><b class="glyphicon glyphicon-pencil" style="font-size: 100%;color: forestgreen"></b> <%= @user.articles.count %> </td>
     </tr>
   </table>
 </div>
<% if current_user.pages.present? %>
<%  @articles.each do  |article| %>

    <div class="normal-g">
      <div class="normal-index">
        <% if current_user %>
            <% if current_user.id   ==   article.user.id  %>
                <a href="#" data-toggle="modal" data-target="#modal-<%= article.id %>"><b class="glyphicon glyphicon-chevron-down" style="font-size: 100%;color:forestgreen"></b></a>
            <% end %>
        <% end %>
      </div>
      <div class="normal-index1">
        <div>
          <% if article.user.image.present? %>
              <%=link_to image_tag(article.user.image,:class=>"mobile-article-image"), article.user %>
          <% else %>
              <%=link_to image_tag("tree.png",:class=>"mobile-article-image"), article.user %>
          <% end %>
        </div>
        <p style="position: relative;bottom: 40px;left: 50px;font-size: 80%"><b><%= article.user.name %></b>
          <br>
          <%= time_ago_in_words(article.created_at) %>
        </p>
      </div>
      <% if article.image.present? %>
          <div class="normal-index-sub">
            <%= image_tag(article.image_url.to_s,:width=>"100%;",:height=>"170px",:class=>"img-thumbnail")  %>
          </div>
      <% else %>
      <% end %>
      <div class="font-body">

        <%= link_to truncate(article.body, :length => 100), article %>

      </div>
      <div class="comment-body"><b> From </b>  <%=link_to article.page.name, article.page %>Comments:<%= article.comments.count %> Views:<%= article.views%></div>
      <% if current_user%>
          <%= form_for([article, article.comments.new]) do |f| %>
              <ul>
                <% article.errors.full_messages.each do |msg| %>
                    <li style="color: #0d0d0d;text-align: center"><%= msg %></li>
                <% end %>
              </ul>
              <%= f.hidden_field :user_id, :class => 'form-control', :value => current_user.id if current_user %>



              <div class="control-group">
                <%= f.text_area :body, :class => 'form-control', :placeholder=>"Enter Comment" ,:style=>"width:98%;  height: 40px;" %>
              </div>

              <table style="position: relative;right: 5%;width: 100%">
                <tr>
                  <td>
                    <% if current_user.image.present? %>
                        <%= image_tag(current_user.image,:class=>"mobile-article-image")  %>
                    <% else %>
                        <%= image_tag("tree.png",:class=>"mobile-article-image")  %>
                    <% end %>
                  </td>
                  <td >   <%= f.submit "comment", :class => 'btn btn-success', :style=>"width:100% ;" %> </td>
                </tr>
              </table>
          <%end%>
      <% end %>
    </div>

    <% if current_user %>
        <div id="modal-<%= article.id %>" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Option</h4>
              </div>
              <div class="modal-body">
                <ul class="sidebar-nav">
                  <li >
                   <b style="color: forestgreen"> <a  data-icon="arrow-l" <%= link_to '<i class="glyphicon glyphicon-pencil" style="font-size:1.4em;color:forestgreen"></i>&nbspEdit'.html_safe, edit_article_path(article) %></a></b>
                  </li>
                  <li>
                    <a  data-icon="arrow-l" <%= link_to '<i class="glyphicon glyphicon-trash"></i>&nbspDelete '.html_safe,  delete_article_path(article), method: :delete, data: { confirm: 'Are you sure?' },:style=>"color:red" %> </a>
                  </li>
                </ul>
                <div style="height: 20px"></div>
                <br>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    <% end %>

 <% end %>
<% end %>
<%= will_paginate @articles %>
<% if current_user.pages.empty? %>
    <%  @pages.where("views >= 50").take(10).each do |page| %>
    <div class="normal-index">
      <%if current_user %>
          <% unless Branch.friendship_exists?(current_user, page )%>
              <%= link_to '<i class="glyphicon glyphicon-plus"></i>'.html_safe, vote_page_path(page, :user_id => @user, :page_id => page.id), method: "post", :class=>"btn btn-success btn-sm" ,:rel=>"external" %>
          <% else %>
              <%= link_to '<i class="glyphicon glyphicon-tree-deciduous"></i>'.html_safe, page, :class=>"btn btn-success btn-sm",:style=>"width: 100%" %>
          <% end %>
      <% end %>
    </div>
    <div class="normal-index1">
      <div>
        <% if page.image.present? %>
            <%=link_to image_tag(page.image,:width=>"46px;",:height=>"47px;"), page  %>
        <% else %>
            <%=link_to  image_tag("tree.png",:width=>"46px;",:height=>"47px;",),page  %>
        <% end %>
      </div>
      <p style="position: relative;bottom: 40px;left: 50px;font-size: 80%"><b><%= page.name %></b>
        <br>
        <%= time_ago_in_words(page.created_at) %>
      </p>
    </div>
  <% end %>
 <%end%>
<% if current_user %>
    <div id="modal-<%= current_user.id %>" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Option</h4>
          </div>
          <div class="modal-body">
            <%= link_to 'Setting', edit_user_path(current_user),:class=>"glyphicon glyphicon-cog" %>

            <div style="height: 20px"></div>
            <br>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
<% end %>

