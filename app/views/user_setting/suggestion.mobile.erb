<style type="text/css">
    .normal-list-body{
        width: 100%;
        height: 42px;
        background: #fff;
        padding: 3px;
        text-align: center;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        position: relative;

    }

    .normal-list-body1{
        width: 100%;
        height: 42px;
        background: #fff;
        padding: 3px;
        text-align: center;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        position: relative;
        margin-bottom: 2%;

    }
    .normal-index{
        width:20%;
        height: 20px;
        float: right;
        text-align:center;
        font-size: inherit;
        margin-top: 1%;
        position: relative;
        right: 3%;
    }
    .normal-index1{
        width:130px;
        height: 50px;
        text-align: left;
        padding-left: 2%;
    }
    .page-index-mobile{
        width: 97%;
        background: #fff;
        padding: 3px;
        text-align: center;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        font-family: 'Open Sans Light', sans-serif;
        margin-bottom: 2%;
        position: relative;
        left: 6px;
    }
</style>
<% @user =  current_user.id if current_user %>
<div class="normal-list-body">
  <b>Find Tree</b><br>
  <span style="font-size:1.2em;color: forestgreen" class="glyphicon glyphicon-tree-deciduous"></span>
</div>
<div class="normal-list-body1">
  <%= form_tag pages_path, :class=>"navbar-search pull-left", :method => :get do %>
      <%= text_field_tag :search, params[:search], :type=>"search",:style=>"width: 100%" , :id=>"textinput",  :placeholder=> "Search Tree"  %>

  <% end %>
</div>
<% @pages.each do |page| %>
    <div class="page-index-mobile">
      <div class="normal-index">
        <%if current_user %>
            <% unless Branch.friendship_exists?(current_user, page )%>
                <%= link_to '<i class="glyphicon glyphicon-plus"></i>'.html_safe, vote_page_path(page, :user_id => @user, :page_id => page.id), method: "post", :class=>"btn btn-success " ,:rel=>"external" %>
            <% else %>
                <%= link_to '<i class="glyphicon glyphicon-tree-deciduous"></i>'.html_safe, page, :class=>"btn btn-success ",:style=>"width: 100%" %>
            <% end %>
        <% end %>
      </div>
      <div class="normal-index1">
        <div>
          <% if page.image.present? %>
              <%=link_to image_tag(page.image,:width=>"46px;",:height=>"47px;"), page  %>
          <% else %>
              <%=link_to  image_tag("tree.png",:width=>"46px;",:height=>"47px;",),page  %>
          <% end %>
        </div>
        <p style="position: relative;bottom: 40px;left: 50px;font-size: 84%"><b><%= page.name %></b>
          <br>
          <i class="glyphicon glyphicon-leaf" style="color: forestgreen"></i> <%= page.branches.count %>
        </p>
      </div>
    </div>
<%end%>

<%= will_paginate @pages %>
