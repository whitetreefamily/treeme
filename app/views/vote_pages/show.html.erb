<div class="page-show-body">
  <ul class="active-list">
    <li >
      <%=link_to 'Vote Page', @vote_page.page, :class=>"btn btn-success btn-sm"%>
    </li>
    <li >
      <a data-toggle="modal" href="#myModal"> <button  type="button" class="btn btn-info btn-sm"> Add Contestant </button> </a>
    </li>
  </ul>
</div>

<div class="row">

  <div class="col-md-9 col-md-push-3" style="margin-bottom: 20%">
    <div style="width: 90%;margin-bottom: 1%;position: relative;bottom: 20px">
      <div class="qf b aml" style="height:180px">
        <div class="user-show-post1">
          <%= image_tag "greetings.png", :width=>"100%;",:height=>"115px;"  %>
          <h4>   <%= @vote_page.page.name  %> Vote Page </h4>
        </div>
      </div>
    </div>
     <div style="width: 90%">
        <div class="qf b aml" style="height: auto">
            <%= render "contestants/index" %>
        </div>
     </div>
   <div style="background: forestgreen;width: 97%;height: 4px;border-radius: 10px;margin-top: 14%"> </div>
  </div>
  <div class="col-md-3 col-md-pull-9">
    <div class="vote-page-show-infor">
       <div style="position: relative;top: 50px;font-size: 30px;">
           <b style="margin-top:30px;color: #F7F7F7">Total Vote</b>
           <div class="vote-page-show-info-sub">
             <b style="position: relative;top: 25%"> <%=  @vote_page.total_vote_page%> </b>
           </div>
        </div>
    </div>

    <div class="vote-page-navigation">
      <div class="qf b aml" style="height: auto;font-size: 50% ">Other Link</div>
      <div class="user-show-infor">
        <a href="#"><div class="qf b aml" style="height: auto;font-size: 50% ">Other Link</div></a>
        <div style="height: 2px"></div>
      </div>
      </div>
    <%=image_tag "white 3.png", :style =>"width:90%" %>

  </div>

</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="text-align: center; background: forestgreen;">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="position: relative;right: 2%">&times;</button>
      <h4 class="modal-title">New Contestant</h4>
    </div>
    <div class="modal-body" style="text-align: center">
      <%= render :partial =>  'contestants/contestent_vote_page',  :locals => {:@contestant => Contestant.new(:vote_page_id => @vote_page.id)}%>
    </div>
    <!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


