<%= form_for @vote_page, :html => { :class => "form-horizontal vote_page" } do |f| %>

    <% if @vote_page.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@vote_page.errors.count, "error") %> prohibited this vote_page from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @vote_page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@vote_page[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@vote_page[:user_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :make_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :make_id, :class => 'form-control' %>
    </div>
    <%= error_span(@vote_page[:make_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            vote_pages_path, :class => 'btn btn-default' %>

<% end %>
